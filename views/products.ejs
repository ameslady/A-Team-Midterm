<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />

  <!-- External CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

  <!-- Internal CSS -->
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
  <link rel="stylesheet" href="/styles/header.css" type="text/css" />
  <link rel="stylesheet" href="/styles/menu.css" type="text/css" />
  <link rel="stylesheet" href="/styles/orderForm.css" type="text/css" />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@700&Josefin+Sans:wght@300&family=Roboto:wght@500;700&display=swap" rel="stylesheet" />

  <!-- Scripts  -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

  <title>Home | Robo Battery Cafe</title>
</head>

<body class="d-flex flex-column min-vh-100">

  <%- include('partials/_navbar') %>

  <header>
    <div class="heroHeader">
      <h2 class="text-center">Menu</h2>
    </div>
  </header>

  <form class="hidden" id="orderForm" action="/orders" method="POST">
    <div class="order-form-card">
    <div class="card" id="formCard">
    <div class="card-body">
      <h4 class="card-title">Pick-Up Details</h4>
      <div class="form-group">
        <input class="form-control" id="input-name&num" type="name" name="name" placeholder="Enter name" />
      </div>
      <div class="form-group">
        <input class="form-control" id="input-name&num" type="phone" name="phone" placeholder="Phone number" />
      </div>

        <div class="form-check form-check-inline">
          <input class="form-check-input" name="tinyBattery" type="checkbox" id="inlineCheckbox1" value="1" />
          <label class="form-check-label" for="inlineCheckbox1">Tiny Battery</label>
          <select class="form-control form-control-sm" name="quantity_tiny">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
          </select>
        </div>

        <div class="form-check form-check-inline">
          <input class="form-check-input" name="xsBattery" type="checkbox" id="inlineCheckbox1" value="2" />
          <label class="form-check-label" for="inlineCheckbox1">XS Battery</label>
          <select class="form-control form-control-sm" name="quantity_xs">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
          </select>
        </div>

        <div class="form-check form-check-inline">
          <input class="form-check-input" name="smallBattery" type="checkbox" id="inlineCheckbox1" value="3" />
          <label class="form-check-label" for="inlineCheckbox1">Small Battery</label>
          <select class="form-control form-control-sm" name="quantity_sm">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
          </select>
        </div>

        <div class="form-check form-check-inline">
          <input class="form-check-input" name="medBattery" type="checkbox" id="inlineCheckbox2" value="4" />
          <label class="form-check-label" for="inlineCheckbox2">Medium Battery</label>
          <select class="form-control form-control-sm" name="quantity_med">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
          </select>
        </div>

        <div class="form-check form-check-inline">
          <input class="form-check-input" name="lgBattery" type="checkbox" id="inlineCheckbox3" value="5" />
          <label class="form-check-label" for="inlineCheckbox3">Large Battery</label>
          <select class="form-control form-control-sm" name="quantity_lg">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
          </select>
        </div>

        <div class="form-check form-check-inline">
          <input class="form-check-input" name="xlBattery" type="checkbox" id="inlineCheckbox3" value="6" />
          <label class="form-check-label" for="inlineCheckbox3">XL Battery</label>
          <select class="form-control form-control-sm" name="quantity_xl">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
          </select>
        </div>

        <br>

        <div>
          <button id="completeOrder" type="submit" class="btn btn-outline-dark">Complete Order</button>
        </div>
        <div class="order-error"></div>
      </div>
    </div>
    </div>
  </form>


  <!-- Menu Layout -->
  <div class="menuContainer mx-auto">
    <div class="row">
      <% for (const battery in batteries) { %>
        <% if (battery <= 3) { %>
          <div class="card">
            <div class="card-body">
              <img src="<%= batteries[battery].image %>"/>
              <h5 class="card-title"><%= batteries[battery].name %></h5>
              <span>$<%= batteries[battery].cost / 100 %></span>
              <hr class="solid">
              <p class="card-text"><%= batteries[battery].description %></p>
            </div>
          </div>
          <% } %>
        <% }; %>
      </div>

     <div class="row">
     <% for (const battery in batteries) { %>
        <% if (battery > 3) { %>
          <div class="card" id="menuItemCard">
            <div class="card-body">
              <img src="<%= batteries[battery].image %>"/>
              <h5 class="card-title"><%= batteries[battery].name %></h5>
              <span>$<%= batteries[battery].cost / 100 %></span>
              <hr class="solid">
              <p class="card-text"><%= batteries[battery].description %></p>
            </div>
          </div>
          <% } %>
        <% } %>
      </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
