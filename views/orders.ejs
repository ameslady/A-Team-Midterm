<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />

  <!-- External CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

  <!-- Internal CSS -->
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
  <link rel="stylesheet" href="/styles/trackOrder.css" type="text/css" />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@700&Josefin+Sans:wght@300&family=Roboto:wght@500;700&display=swap" rel="stylesheet" />

  <!-- Scripts  -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

  <title>Order | Robo Battery Cafe</title>
  <link rel="shortcut icon" type="image/png" href="/images/favicon.ico">
</head>

<body class="d-flex flex-column min-vh-100">

  <%- include('partials/_navbar') %>

  <div class="thank-you-img">
    <img src="/images/thank-you.png" alt="thank-you-image">
  </div>

  <main class="customerOrderContainer">
      <section class="restaurantDetails">
        <div class="card">
          <img class="card-img-top" id="map" src="/images/robot_battery_cafe_googlemaps.png" alt="Card image cap"/>
          <div class="card-body">
            <h3 class="card-title">Pick-Up Location</h3>
               <p>1 Duckworth St, St. John's, NL A1C 1E3</p>
          </div>
        </div>
    </section>
    <br>
    <section class="orderDetails">
      <div class="card">
          <div class="card-body">
            <h3 class="card-title">Your Order # <%= orderDetails[orderSession].id %></h3>

            <table class="table">
              <thead>
            <tr>
              <th scope="col">Battery ID</th>
              <th scope="col">Name</th>
              <th scope="col">Quantity</th>
              <th scope="col">Price Per Product</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% for(const order in orderItems) { %>
                <td><%= orderItems[order].id %></td>
                <td><%= orderItems[order].name %></td>
                <td>x <%= orderItems[order].quantity %></td>
                <td>$<%= orderItems[order].price / 100 %></td>
              </tr>
              <% } %>
            </tbody>
          </table>
            <div class="orderTotal">
              <span><strong>Total:</strong> $<%= orderDetails[orderSession].total / 100 %></span>
            </div>
        </div>

        <div class="card-footer" id="detailsFooter">
          <span><strong>Ordered at:</strong> <%= orderDetails[orderSession].created_at.toTimeString().slice(0, 5) %></span>
          <span><strong>Prep Time:</strong> ~ <%= orderDetails[orderSession].total_prep %> mins</span>
          <span><strong>Status:</strong> In-progress</span>
        </div>
      </div>
    </section>
  </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
