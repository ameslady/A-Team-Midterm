<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"/>

  <!-- External CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css"/>
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css"/>

  <!-- Internal CSS -->
  <link rel="stylesheet" href="/styles/main.css" type="text/css"/>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com"/>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
  <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300&family=Roboto:wght@500;700&display=swap" rel="stylesheet"/>

  <!-- Scripts  -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

  <title>Order | Robo Battery Cafe</title>
</head>

<body class="d-flex flex-column min-vh-100">
  <%- include('partials/_header') %>

    <h3>Order Details</h3>

    <div>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Order ID</th>
            <th scope="col">Ordered At</th>
            <th scope="col">Prep Time</th>
            <th scope="col">Total</th>
            <th scope="col">Status</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% for(const order in orderDetails) { %>
              <td><%= orderDetails[order].id %></td>
              <td><%= orderDetails[order].created_at %></td>
              <td><%= orderDetails[order].total_prep %> mins</td>
              <td>$<%= orderDetails[order].total / 100 %></td>
              <td><%= orderDetails[order].active %></td>
          </tr>
          <% } %>
        </tbody>
      </table>

      <h3>Item Details</h3>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">Battery ID</th>
            <th scope="col">Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price Per Product</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% for(const order in orderItems) { %>
              <td><%= orderItems[order].id %></td>
              <td> <%= orderItems[order].name %></td>
              <td>x <%= orderItems[order].quantity %></td>
              <td>$<%= orderItems[order].price / 100 %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
